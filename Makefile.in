#
# Package
#

post-compile:
	@echo
	@echo "(Type 'make install' to install)"
	@echo

install: $(BUILD_BINS) $(BUILD_LIBS)
	@echo
	@echo "Installing..."
	@echo
	
	@#
	@# Create directories
	@#
	
	for i in $(INSTALL_DIRS); do mkdir -p $(VPOPMAILDIR)/$${i}; chown vpopmail:vchkpw $(VPOPMAILDIR)/$${i}; done
	chmod 700 $(VPOPMAILDIR)/domains
	
	@#
	@# Copy binaries, libraries and headers
	@#
	
	for i in $(BUILD_BINS); do $(INSTALL) -o vpopmail -g vchkpw $${i} $(VPOPMAILDIR)/bin; chmod 711 $(VPOPMAILDIR)/bin/$${i}; done
	for i in $(BUILD_LIBS); do $(INSTALL) $${i} $(VPOPMAILDIR)/lib; chmod 644 $(VPOPMAILDIR)/lib/$${i}; done
	$(INSTALL) -m 444 config.h $(VPOPMAILDIR)/include/vpopmail_config.h
	for i in $(INSTALL_HEADERS); do $(INSTALL) -m 444 $${i} $(VPOPMAILDIR)/include; done
	
	@#
	@# Create dependency files
	@#
	
	echo "-I$(VPOPMAILDIR)/include" > $(VPOPMAILDIR)/etc/inc_deps
	echo "-L$(VPOPMAILDIR)/lib $(LIBS)" > $(VPOPMAILDIR)/etc/lib_deps
	
	@#
	@# Copy vusagec.conf
	@#
	
	if test ! -r $(VPOPMAILDIR)/etc/vusagec.conf; then \
	   $(INSTALL) -o vpopmail -g vchkpw -m 644 vusagec.conf $(VPOPMAILDIR)/etc/vusagec.conf; \
    fi
	
	@#
	@# If vauth.c is symlinked to vmysql.c, copy
	@# vpopmail.mysql
	@#
	
	if test ! "`diff -q ./vauth.c ./vmysql.c`"; then \
	   if test ! -r $(VPOPMAILDIR)/etc/vpopmail.mysql; then \
		 $(INSTALL) -o vpopmail -g vchkpw -m 0640 vpopmail.mysql $(VPOPMAILDIR)/etc/vpopmail.mysql; \
	   fi; \
    fi
	
	@#
	@# Done
	@#
	
	@echo
	@echo "vpopmail is installed"
	@echo

#
# Cleanup
# 

clean:
	rm -f *.o *.core core vauth.c $(BUILD_BINS) $(BUILD_LIBS)
	(cd cdb;make clean)

distclean: clean
	rm -rf config.h Makefile autom4te.cache config.log config.status
	(cd cdb;make distclean)
