include ../module.mk

CFLAGS = @CFLAGS@ -I@incdir@
LDFLAGS = @LDFLAGS@
CCC = $(CC) $(CFLAGS)
LINK = $(CC) -shared -nostartfiles
LIBS = -L@libdir@ @LIBS@
DEPS = Makefile

all: vldap.so

vldap.so: vldap.o
	$(LINK) -o vldap.so vldap.o $(LIBS)

vldap.o: $(DEPS) vldap.c vldap.h
	$(CCC) -o vldap.o -c vldap.c

clean:
	rm -f *.o *.so

distclean: clean
	rm -rf Makefile autom4te.cache  config.log config.status

install:
	$(INSTALL) vldap.so $(VPOPMAIL_MODULEDIR)/vldap.so
	if test -L $(VPOPMAIL_AUTHMODULE); then \
	   rm -f $(VPOPMAIL_AUTHMODULE); \
	   ln -s $(VPOPMAIL_MODULEDIR)/vldap.so $(VPOPMAIL_AUTHMODULE); \
    fi
	
	if ! test -r $(VPOPMAIL_ETCDIR)/vpopmail.ldap; then \
	   $(INSTALL) -o vpopmail -g vchkpw -m 0640 vpopmail.ldap $(VPOPMAIL_ETCDIR)/vpopmail.ldap; \
    fi
