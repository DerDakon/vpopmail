include ../module.mk

CFLAGS = @CFLAGS@
LDFLAGS = @LDFLAGS@
CCC = $(CC) $(CFLAGS)
LINK = $(CC) -shared -nostartfiles
DEPS = Makefile

all: vcdb.so

vcdb.so: vcdb.o
	$(LINK) -o vcdb.so vcdb.o

vcdb.o: $(DEPS) vcdb.c vcdb.h
	$(CCC) -o vcdb.o -c vcdb.c

clean:
	rm -f *.o *.so

distclean: clean
	rm -rf Makefile autom4te.cache  config.log config.status

install:
	$(INSTALL) vcdb.so $(VPOPMAIL_MODULEDIR)/vcdb.so
	if test -L $(VPOPMAIL_AUTHMODULE); then \
	   rm -f $(VPOPMAIL_AUTHMODULE); \
	   ln -s $(VPOPMAIL_MODULEDIR)/vcdb.so $(VPOPMAIL_AUTHMODULE); \
    fi
